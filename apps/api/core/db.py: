"""In-memory persistence placeholder."""

from __future__ import annotations

from datetime import datetime
from typing import Any, Dict, List


class SnapshotStore:
    """Minimal in-memory snapshot store."""

    def __init__(self) -> None:
        self._snapshots: List[Dict[str, Any]] = []

    def save(self, ticker: str, payload: Dict[str, Any]) -> None:
        self._snapshots.append(
            {
                "ticker": ticker,
                "payload": payload,
                "saved_at": datetime.utcnow().isoformat() + "Z",
            }
        )

    def list_snapshots(self, ticker: str) -> List[Dict[str, Any]]:
        return [snapshot for snapshot in self._snapshots if snapshot["ticker"] == ticker]
